{
  "name": "office-management",
  "version": "1.0.0",
  "description": "Office and legal practice management system monorepo",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter nandeesh-web dev\" \"pnpm --filter desktop dev\"",
    "build": "pnpm run --recursive build",
    "build:ui": "pnpm --filter nandeesh-web build",
    "build:desktop": "pnpm --filter desktop build",
    "migrate": "pnpm --filter data migrate",
    "seed": "pnpm --filter data seed",
    "clean": "pnpm run --recursive clean",
    "type-check": "pnpm run --recursive type-check",
    "lint": "pnpm run --recursive lint",
    "test": "pnpm run --recursive test",
    "dev:web": "pnpm --filter nandeesh-web dev",
    "dev:desktop": "pnpm --filter desktop dev",
    "build:web": "pnpm --filter nandeesh-web build",
    "build:core": "pnpm --filter core build",
    "build:data": "pnpm --filter data build",
    "build:jobs": "pnpm --filter jobs build",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install || true",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "playwright": "^1.55.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "nprogress": "^0.2.0"
  }
}
